{
  "name": "graphql-blog",
  "version": "1.0.0",
  "description": "A GRAPHQL API for blog",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "heroku-prebuild": "echo Build Started",
    "heroku-postbuild": "babel src --out-dir dist",
    "start": "env-cmd ./database/Config/prod.env node app.js --ext js,graphql --exec babel-node",
    "start-dev": "env-cmd ./database/Config/dev.env nodemon app.js --ext js,graphql --exec babel-node",
    "get-schema": "graphql get-schema -p blog-api"
  },
  "author": "Sachin Thakur",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@sentry/node": "^5.0.5",
    "appmetrics-dash": "^4.1.0",
    "appmetrics-prometheus": "^2.0.0",
    "appmetrics-zipkin": "^1.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "env-cmd": "^8.0.2",
    "express": "^4.16.4",
    "graphql-cli": "^3.0.11",
    "graphql-yoga": "^1.17.4",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^4.1.0",
    "prisma-binding": "^2.3.10"
  }
}